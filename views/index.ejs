</div>

<div style="padding:20px">
  <button onclick="on()">Welcome to Venue Management System</button>
</div>

<script>
function on() {
  document.getElementById("overlay").style.display = "block";
}

function off() {
  document.getElementById("overlay").style.display = "none";
}
</script>
